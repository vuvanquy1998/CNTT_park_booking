<%- if devise_mapping.confirmable? && controller_name != t("sessions.confirmation") %>
  <%= link_to t("sessions.not_receive_confirm_instruc"), new_confirmation_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != t("sessions.unlock") %>
  <%= link_to t("sessions.not_receive_unlock_instruc"), new_unlock_path(resource_name) %><br />
<% end %>
