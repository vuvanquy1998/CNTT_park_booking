<div id="edit-user" class="mainbox col-md-8 col-md-offset-2
  col-sm-8 col-sm-offset-2">
  <div class="panel panel-success">
    <div class="panel-heading">
      <div class="panel-title"><%= t "homes.change_profile" %></div>
    </div>
    <div class="panel-body">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name),
        html: {method: :put}) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.label :name, t("users.user_name") %>
        <%= f.text_field :name, class: "form-control" %><br>
        <%= f.label :email, t("sessions.email") %>
        <%= f.email_field :email, class: "form-control" %><br>
        <%= f.file_field :user_img, class: "form-control", id: "file_img" %>
        <%= f.label :user_img, resource.user_img.url,
          class: "current_img" %><br><br>
        <%= f.label :phone_number, t("users.user_sdt") %>
        <%= f.text_field :phone_number, class: "form-control" %><br>
        <%= f.label :password, t("sessions.pw") %> <i><%= t "users.not_change_pw" %></i>
        <%= f.password_field :password, class: "form-control" %>
        <% if @minimum_password_length %>
          <em><%= t "users.min_pw" %> <%= @minimum_password_length %>
            <%= t "users.characters_pw" %></em>
        <% end %><br><br>
        <%= f.label :password_confirmation, t("sessions.retype_new_pw") %>
        <%= f.password_field :password_confirmation, class: "form-control" %><br>
        <%= f.label :current_password, t("users.current_pw") %>
          <i><%= t "users.confirm_change_pw" %></i><br>
        <%= f.password_field :current_password, class: "form-control" %><br><br>
        <%= f.submit t("parkings.confirm"), class: "btn btn-primary" %>
        <%= link_to t("parkings.cancel"), current_user,
          class: "btn btn-warning btn_cancel" %>
      <% end %>
    </div>
  </div>
</div>

<%= javascript_include_tag "handle_img", "data-turbolink-track": "reload" %>
