<div class="signup-form mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <h2><%= t "sessions.signup" %></h2>
    <p><%= t "sessions.require_fill" %></p>
    <hr>
    <div class="form-group">
      <div class="input-group">
        <span class="input-group-addon"><i class="fa fa-user"></i></span>
        <%= f.text_field :name, class: "form-control",
          placeholder: t("sessions.full_name") %>
      </div>
    </div>
    <div class="form-group">
      <div class="input-group">
        <span class="input-group-addon"><i class="fa fa-paper-plane"></i></span>
        <%= f.email_field :email, class: "form-control",
          placeholder: t("sessions.your_email") %>
      </div>
    </div>
    <div class="form-group">
      <div class="input-group">
        <span class="input-group-addon"><i class="fa fa-phone"></i></span>
        <%= f.text_field :phone_number, class: "form-control",
          placeholder: t("sessions.your_sdt") %>
      </div>
    </div>
    <div class="form-group">
      <div class="input-group">
        <span class="input-group-addon"><i class="fa fa-picture-o"></i></span>
        <%= f.file_field :user_img, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <div class="input-group">
        <span class="input-group-addon"><i class="fa fa-lock"></i></span>
        <%= f.password_field :password, class: "form-control",
          placeholder: t("sessions.type_pw") %>
      </div>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
    </div>

    <div class="form-group">
      <div class="input-group">
        <span class="input-group-addon">
          <i class="fa fa-lock"></i>
          <i class="fa fa-check"></i>
        </span>
        <%= f.password_field :password_confirmation,  class: "form-control",
          placeholder: t("sessions.retype_pw") %>
      </div>
    </div>
    <div class="form-group">
      <%= f.submit t("sessions.signup"), class: "btn btn-primary btn-lg" %>
    </div>
  <% end %>
  <div class="text-center small"><%= t "sessions.had_account" %>
    <%- if controller_name != t("sessions.session") %>
      <%= link_to t("sessions.login_now"), new_session_path(resource_name) %><br />
    <% end %>
  </div>
</div>

<%= javascript_include_tag "hidden_header", "data-turbolinks-track": "reload" %>
