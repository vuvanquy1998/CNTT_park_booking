<form method="post">
  <div class="row">
    <div class="col-md-4">
      <div class="profile-img">
        <%= image_tag(@user.user_img.url(:user_show), class: "profile_img") %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="profile-head">
        <h4><%= @user.name %></h4>
        <p class="proile-rating"><%= t "users.score" %><span>
          <%= @user.score %><%= t "users.rate_score" %></span></p><br>
        <h4><%= t "users.profile_info" %></h4><hr>
      </div>
    </div>
    <% if current_user == @user %>
      <div class="col-md-2">
        <%= link_to t("users.edit"), edit_user_registration_path, class: "profile-edit-btn" %>
      </div>
    <% end %>
  </div>
  <div class="row">
    <div class="col-md-4">
    </div>
    <div class="col-md-8">
      <div class="profile-tab" id="myTabContent">
        <div class="row">
          <div class="col-md-6">
            <label><%= t "users.user_id" %></label>
          </div>
          <div class="col-md-6">
            <p><%= @user.id %></p>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6">
            <label><%= t "users.user_name" %></label>
          </div>
          <div class="col-md-6">
            <p><%= @user.name %></p>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6">
            <label><%= t "sessions.email" %></label>
          </div>
          <div class="col-md-6">
            <p><%= @user.email %></p>
          </div>
        </div>
        <% if @user.phone_number != "" %>
          <div class="row">
            <div class="col-md-6">
              <label><%= t "users.user_sdt" %></label>
            </div>
            <div class="col-md-6">
              <p><%= @user.phone_number %></p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</form>
