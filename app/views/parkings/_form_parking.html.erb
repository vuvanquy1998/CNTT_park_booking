<div class="mainbox col-md-8 col-md-offset-2 col-sm-8 col-sm-offset-2">
  <div class="panel panel-success">
    <div class="panel-heading">
      <div class="panel-title"><%= title %></div>
    </div>
    <div class="panel-body">
      <%= form_for [user, parking], html: {class: "form-horizontal"} do |f| %>
        <%= f.label :name, t("parkings.name_park") %>
        <%= f.text_field :name, class: "form-control" %><br>
        <%= f.label :waiting_time, t("parkings.waiting_time") %><br>
        <%= f.select :waiting_time, [t("parkings.option1"), t("parkings.option2"),
          t("parkings.option3"), t("parkings.option4")], class: "form-control" %><br><br>
        <%= f.label :description, t("parkings.description") %>
        <%= f.text_field :description, class: "form-control" %><br>
        <%= f.label :total_position, t("parkings.total_position") %>
        <%= f.number_field :total_position, class: "form-control" %><br>
        <%= f.label :latitude, t("parkings.latitude") %>
        <%= f.text_field :latitude, class: "form-control" %><br>
        <%= f.label :longitude, t("parkings.longitude") %>
        <%= f.text_field :longitude, class: "form-control" %><br>
        <%= f.label :address, t("parkings.address") %>
        <%= f.text_field :address, class: "form-control" %><br>
        <%= f.label :time_open, t("parkings.time_open") %>
        <%= f.time_field :time_open, class: "form-control" %><br>
        <%= f.label :time_close, t("parkings.time_close") %>
        <%= f.time_field :time_close, class: "form-control" %><br>
        <% if title == t("parkings.edit_park") %>
          <%= f.label :status, t("parkings.status_park") %><br>
          <%= f.select :status, [t("parkings.open_status"),
            t("parkings.close_status")], class: "form-control" %><br><br>
        <% end %>
        <%= f.label :price, t("parkings.price") %>
        <%= f.text_field :price, class: "form-control" %><br>
        <%= f.submit t("parkings.confirm"), class: "btn btn-primary" %>
        <%= link_to t("parkings.cancel"), root_url,
          class: "btn btn-warning btn-cancel" %>
      <% end %>
    </div>
  </div>
</div>
